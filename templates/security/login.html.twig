{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Connexion.{% endblock %}

{% block body %}
    <section class="form-style-security login-section d-flex align-items-center flex-column">
        {% for message in app.flashes('message-succes') %}
            <div class="message-succes">
                <div class="flash-notice alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('message-error') %}
            <div class="message-error">
                <div class="flash-notice alert alert-error alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
            {% if error %}
                <div class="message-error">
                    <div class="flash-notice alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}
        <div class="container border form-group d-flex align-items-center flex-column justify-content-around">
            <h1>Connexion</h1>
            <form class="d-flex align-items-center flex-column justify-content-between" action="{{ path('login') }}" method="post">
                <div class="form-group d-flex flex-column align-items-center">
                <label for="username">Nom d'utilisateur:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>

                <div class="form-group d-flex flex-column align-items-center">
                <label for="password">Mot de passe:</label>
                <input class="form-control" type="password" id="password" name="_password" />
                </div>
            <button class="btn btn-primary btn-primary-blue-reverse" type="submit">Connexion</button>
            </form>

            <div class="div-a d-flex flex-column align-items-center justify-content-between">
                <a class="font-white blue-hover" href="{{ path('registration') }}">S'inscrire.</a>
                <a class="font-white blue-hover" href="{{ path('forgot_password') }}">Mot de passe oubli√©.</a>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/index.js') }}"></script>
{% endblock %}
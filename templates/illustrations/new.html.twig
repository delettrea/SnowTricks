{% extends 'base.html.twig' %}

{% block title %} Nouvelle illustration - SnowTricks{% endblock %}

{% block body %}
    <section class="section-addIllustration d-flex flex-column">
        <h4 class="text-center font-blue">Ajouter une image</h4>
        <p class="text-center instruction container">Veuillez cliquer sur le mot illustration pour envoyer votre nouvelle image pour la figure.</p>
        <div class="form-edit  d-flex flex-column justify-content-center">
            {{ form_start(form) }}
            <div class="form-group d-flex flex-column align-items-center justify-content-around">
                <div class="form-group d-flex flex-column align-items-center">
                    <div class="div-inputFile">
                        {{ form_label(form.name) }}
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.name) }}
                    </div>
                    {{ form_widget(form.name) }}
                </div>
                <button class="btn btn-primary btn-primary-blue-reverse" type="submit">Ajouter l'image</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/inputIllustration.js') }}"></script>
{% endblock %}
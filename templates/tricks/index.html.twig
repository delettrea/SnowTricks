{% extends 'base.html.twig' %}

{% block body %}
    <section class="container-fluid index_section1 col-xs-12 vw_100">
        <div class="welcome_message">
            <div class="container-fluid d-flex flex-column justify-content-center align-items-center">
                <a href="{{ path('home_page') }}">
                    <h1 class="underline-blue mt-0">snowtricks</h1>
                </a>
                <h5 class="container">Le site communautaire pour apprendre les figures de snowboard</h5>
            </div>
            <i id="button_to_section2" class="arrow-down fas fa-2x fa-arrow-down"></i>
        </div>
    </section>
    <section id="index_section2" class="container-fluid col-xs-12 display-none nav-height row justify-content-center justify-content-md-around m-0">
        {% for message in app.flashes('message') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for trick in tricks %}
            <div class="trick {{ trick.name }} container col-xs-12 col-sm-12 col-md-5 col-lg-3">
                <div class="one_illustration">
                {% if trick.illustration is empty %}
                    <img class="tricks_one_illustration" src="{{ illustrations_folder }}/default.jpg"
                         alt="image par default">
                {% else %}
                    {% for img in trick.illustration %}
                        <img class="tricks_one_illustration" src="{{ illustrations_folder }}/{{ img.name }}"
                             alt="image {{ trick.name }}">
                    {% endfor %}
                {% endif %}
            </div>
            <div class="name d-flex justify-content-between align-items-center">
                <a class="trick_detail_link font-blue underline-blue" href="{{ path('trick_details', {'id' : trick.id}) }}">{{ trick.name }}</a>
                <div class="div_button d-flex">
                <a class="button btn btn-link font-white" href="{{ path('trick_edit', { 'id': trick.id }) }}"><i class="fas fa-pencil-alt"></i></a>
                <a class="button btn btn-link font-white" href="{{ path('trick_delete_url', { 'id': trick.id }) }}"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/js/index.js') }}"></script>
{% endblock %}

{% block sizeHeader %}
{% endblock %}